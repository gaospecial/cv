}

@article{zhangArchaealEukaryotelikeOrc12009,
  title = {Archaeal Eukaryote-like {{Orc1}}/{{Cdc6}} Initiators Physically Interact with {{DNA}} Polymerase {{B1}} and Regulate Its Functions},
