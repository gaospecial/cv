  shorttitle = {Towards a Better Understanding of {{Pseudomonas}} Putida Biofilm Formation in the Presence of {{ZnO}} Nanoparticles ({{NPs}})},
  author = {Ouyang, Kai and Mortimer, Monika and Holden, Patricia A. and Cai, Peng and Wu, Yichao and Gao, Chunhui and Huang, Qiaoyun},
  year = {2020},
  month = apr,
  journal = {Environment International},
  volume = {137},
