  author = {Lin, Di and Cai, Peng and Peacock, Caroline L. and Wu, Yichao and Gao, Chunhui and Peng, Wanxi and Huang, Qiaoyun and Liang, Wei},
  year = {2018},
  month = dec,
  journal = {Science of The Total Environment},
  volume = {645},
